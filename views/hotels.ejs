<% layout("/layouts/boilerplate") %>
<body>
    <div class="container mt-4">
        <h2 style="font-weight: bold;" class="fs-1 mb-4 text-center">Listing Details</h2>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border border-0 mx-auto">
                    <img class="card-img-top" src="<%= data.image.url %>" alt="<%= data.title %>" style="width: 100%; height: 30vh; object-fit: cover;">
                    <div class="card-body p-1">
                        <h5 style="font-weight: bold; color: #000;" class="card-title"><%= data.title %></h5>
                        <p class="card-text">Price: &#8377;<%= data.price.toLocaleString("en-IN") %></p>
                        <p class="card-text">Description: <%= data.description %></p>
                        <p class="card-text">Location: <%= data.location %></p>
                        <p class="card-text">Country: <%= data.country %></p>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="/listings/edit/<%= data.id %>" class="btn btn-primary">Edit</a>
                            <form method="post" action="/listings/<%= data.id %>?_method=DELETE">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    
    <script src="/path/to/your/script.js" async defer></script>
</body>
