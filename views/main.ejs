<% layout("/layouts/boilerplate") %>
<title>StayNJoy Hotels</title>
<body>
    <div class="container filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-city"></i>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain"></i>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castles</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-cow"></i>
            <p>Farms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-igloo"></i>
            <p>Domes</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-ship"></i>
            <p>Boat</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
              </div>
        </div>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-1">
            <% data.forEach(element => { %>
                <div class="col card-area">
                    <a class="listing-link main-con-a text-decoration-none" href="/listings/<%= element.id %>">
                        <div class="card border-0 shadow-sm h-100 animated-card">
                            <img style="height: 20rem; object-fit: cover;" src="<%=element.image.url %>" class="card-img-top img-fluid rounded" alt="<%= element.image.filename %>">
                            <div class="card-body main_hotel">
                                <h5 class="card-title"><%= element.title %></h5>
                                <p class="card-text">&#8377;<%= element.price.toLocaleString("en-IN") %> /night
                                    <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                                </p>
                                
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    
    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    
    <script src="" async defer></script>
    <style>
        .animated-title {
            animation: fadeInDown 1s ease-out;
        }

        .animated-card {
            opacity: 0;
            animation: fadeInUp 1s ease-out forwards;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* .card-area {
            transition: transform 0.5s ease-out !important;
        }

        .card-area:hover .card {
            transform: scale(1.05) !important;
        } */
    </style>
</body>
