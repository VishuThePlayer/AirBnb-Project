<% layout("/layouts/boilerplate") %>
<title>StayNJoy Hotels</title>
<body>
    <div class="container-fluid py-3">
  <div class="d-flex flex-wrap justify-content-start gap-3">
    <div class="filter text-center">
      <i class="fa-solid fa-fire fa-2x"></i>
      <p class="mb-0">Trending</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-bed fa-2x"></i>
      <p class="mb-0">Rooms</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-mountain-city fa-2x"></i>
      <p class="mb-0">Iconic Cities</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-mountain fa-2x"></i>
      <p class="mb-0">Mountain</p>
    </div>
    <div class="filter text-center">
      <i class="fa-brands fa-fort-awesome fa-2x"></i>
      <p class="mb-0">Castles</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-person-swimming fa-2x"></i>
      <p class="mb-0">Amazing Pools</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-campground fa-2x"></i>
      <p class="mb-0">Camping</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-cow fa-2x"></i>
      <p class="mb-0">Farms</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-snowflake fa-2x"></i>
      <p class="mb-0">Arctic</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-igloo fa-2x"></i>
      <p class="mb-0">Domes</p>
    </div>
    <div class="filter text-center">
      <i class="fa-solid fa-ship fa-2x"></i>
      <p class="mb-0">Boat</p>
    </div>
    <!-- Tax toggle -->
    <!-- <div class="tax-toggle ms-auto">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
      </div>
    </div> -->
    <div class="tax-toggle d-flex align-items-center ms-auto ps-2">
        <div class="form-check form-switch mb-0">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
        </div>
    </div>

  </div>
</div>
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-1">
            <% data.forEach(element => { %>
                <div class="col card-area">
                    <a class="listing-link main-con-a text-decoration-none" href="/listings/<%= element.id %>">
                        <div class="card border-0 shadow-sm h-100 animated-card">
                            <img style="height: 20rem; object-fit: cover;" src="<%=element.image.url %>" class="card-img-top img-fluid rounded" alt="<%= element.image.filename %>">
                            <div class="card-body main_hotel">
                                <h5 class="card-title"><%= element.title %></h5>
                                <p class="card-text">&#8377;<%= element.price.toLocaleString("en-IN") %> /night
                                    <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                                </p>
                                
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    
    <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    
    <script src="" async defer></script>
    <style>
        .animated-title {
            animation: fadeInDown 1s ease-out;
        }

        .animated-card {
            opacity: 0;
            animation: fadeInUp 1s ease-out forwards;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* .card-area {
            transition: transform 0.5s ease-out !important;
        }

        .card-area:hover .card {
            transform: scale(1.05) !important;
        } */
    </style>
</body>